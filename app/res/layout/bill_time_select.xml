<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_time_select"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:layout_gravity="bottom"
    android:background="@drawable/popup_bg"
    android:orientation="vertical" >
    <RelativeLayout
        android:id="@+id/rl_popup_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/tv_pop_title"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="@string/wallet_select_time"
            android:layout_marginTop="@dimen/y11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="@dimen/x17"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/black"
            android:layout_alignBaseline="@+id/tv_pop_title"
            android:text="@string/label_cancel"
            />

        <TextView
            android:id="@+id/tv_ensure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:layout_marginRight="@dimen/x16"
            android:text="@string/label_ok"
            android:textColor="@color/font_color_select"
            android:layout_alignBaseline="@+id/tv_pop_title"
            android:textSize="@dimen/sp_16" />
    </RelativeLayout>
    <View
        android:id="@+id/view_popup_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:background="@color/line_bg"
        android:layout_marginTop="@dimen/y11"
        />
    <LinearLayout
        android:id="@+id/tp_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <com.shushan.thomework101.wallet.WheelView
            android:id="@+id/year"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <com.shushan.thomework101.wallet.WheelView
            android:id="@+id/month"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />
    </LinearLayout>
</LinearLayout>