<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.shushan.thomework101.MainActivity">

    <EditText
        android:id="@+id/et_login_phone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y42"
        android:layout_marginLeft="@dimen/x48"
        android:layout_marginRight="@dimen/x48"
        android:layout_marginTop="@dimen/y290"
        android:background="@drawable/edit_bg"
        android:drawableLeft="@drawable/login_phone"
        android:drawablePadding="@dimen/x15"
        android:hint="@string/login_please_input_phone_number"
        android:paddingLeft="@dimen/x26"
        android:textColorHint="@color/white"
        android:textSize="@dimen/sp_16"
        android:inputType="number"
        android:singleLine="true"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x48"
        android:layout_marginRight="@dimen/x48"
        android:layout_marginTop="@dimen/y37">

        <EditText
            android:id="@+id/et_login_psw"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y42"
            android:background="@drawable/edit_bg"
            android:drawableLeft="@drawable/login_password"
            android:drawablePadding="@dimen/x15"
            android:hint="@string/login_please_input_password"
            android:paddingLeft="@dimen/x26"
            android:textColorHint="@color/white"
            android:textSize="@dimen/sp_16"
            android:digits="01234567890123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:singleLine="true"
            />

        <ImageView
            android:id="@+id/tv_login_psw_hide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x12"
            android:background="@drawable/login_password_show" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/y38">

        <ImageView
            android:id="@+id/iv_login_agree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/login_agreement" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x7"
            android:layout_toRightOf="@+id/iv_login_agree"
            android:text="@string/login_agree"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14"
            />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/x14"
        android:background="@drawable/button_login" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/y17">

        <TextView
            android:id="@+id/tv_login_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_register"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14" />

        <View
            android:id="@+id/view_login"
            android:layout_width="@dimen/x2"
            android:layout_height="@dimen/y16"
            android:layout_marginLeft="@dimen/x16"
            android:layout_toRightOf="@+id/tv_login_register"
            android:background="@color/white" />

        <TextView
            android:id="@+id/tv_login_forget_psw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x16"
            android:layout_toRightOf="@+id/view_login"
            android:text="@string/login_forget_password"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14" />
    </RelativeLayout>
</LinearLayout>