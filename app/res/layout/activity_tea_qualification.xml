<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context=".homepage.TeaQualificationActivity">


    <include layout="@layout/actionbar_layout"></include>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/homepage_info_tea_qualification_notice"
        android:layout_marginTop="@dimen/y20"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_16" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y14">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/y180"
            android:layout_marginLeft="@dimen/x28"
            android:layout_marginRight="@dimen/x28"
            android:background="@color/wallet_id_card_bg">

        </View>

        <View
            android:layout_width="@dimen/x45"
            android:layout_height="@dimen/y3"
            android:layout_centerInParent="true"
            android:background="@color/wallet_id_card_bg">

        </View>

        <View
            android:layout_width="@dimen/x3"
            android:layout_height="@dimen/y42"
            android:layout_centerInParent="true"
            android:background="@color/wallet_id_card_bg">

        </View>
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/teaching_grade_notice"
        android:text="@string/homepage_info_tea_qualification_suggest"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/y14"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_1"
        android:layout_marginTop="@dimen/y37"
        android:layout_gravity="center_horizontal"
        android:text="@string/commit"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16"
        />
</LinearLayout>